import os
import sys
import subprocess

def main():
    # è·å–é¡¹ç›®æ ¹ç›®å½•
    script_dir = os.path.dirname(os.path.abspath(__file__))
    vlingo_script = os.path.join(script_dir, "scripts", "vlingo")
    
    # æ£€æŸ¥ scripts/vlingo æ˜¯å¦å­˜åœ¨
    if not os.path.exists(vlingo_script):
        print(f"âŒ é”™è¯¯: {vlingo_script} ä¸å­˜åœ¨")
        print("ğŸ’¡ è¯·ç¡®ä¿ scripts/vlingo æ–‡ä»¶å­˜åœ¨ä¸”å¯æ‰§è¡Œ")
        sys.exit(1)
    
    # è½¬å‘æ‰€æœ‰å‚æ•°åˆ° scripts/vlingo
    try:
        result = subprocess.run([sys.executable, vlingo_script] + sys.argv[1:], 
                              cwd=script_dir)
        sys.exit(result.returncode)
    except KeyboardInterrupt:
        print("\nğŸ‘‹ ç”¨æˆ·ä¸­æ–­")
        sys.exit(0)
    except Exception as e:
        print(f"âŒ æ‰§è¡Œå¤±è´¥: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()


















